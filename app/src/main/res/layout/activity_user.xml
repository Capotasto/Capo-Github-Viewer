<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="com.funckyhacker.capogithubviewer.view.user.UserViewModel"
            />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.user.UserActivity"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/AppToolbar"
            android:elevation="@dimen/element_spacing_small"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:imageUrl="@{viewModel.avatarUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar"
            tools:src="@drawable/ic_github"
            />

        <TextView
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{viewModel.login}"
            android:textSize="@dimen/text_size_medium"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar"
            app:layout_constraintStart_toEndOf="@+id/icon"
            tools:text="ID"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.name}"
            android:textSize="@dimen/text_size_medium"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="name"
            app:layout_constraintTop_toBottomOf="@+id/id"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/icon"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            />

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="@dimen/view_size_xtiny"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location"
            app:layout_constraintStart_toEndOf="@+id/icon"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@{viewModel.location}"
            android:textColor="#222222"
            tools:text="Vancouver"
            app:layout_constraintStart_toEndOf="@+id/location_icon"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/location_icon"
            app:layout_constraintBottom_toBottomOf="@+id/location_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            />


        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="@dimen/view_size_xtiny"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mail"
            app:layout_constraintStart_toEndOf="@+id/icon"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/location_icon"
            />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.email}"
            android:textColor="#222222"
            tools:text="example@sample.com"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/email_icon"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/email_icon"
            app:layout_constraintBottom_toBottomOf="@+id/email_icon"
            />

        <TextView
            android:id="@+id/repos_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@string/label_repos"
            android:textColor="#222222"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/gists_label"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/company_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@string/label_company"
            android:textColor="#222222"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/repos_label"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/blog_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@string/label_blog"
            android:textColor="#222222"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/company_label"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/gists_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@string/label_gists"
            android:textColor="#222222"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/following_label"
            />

        <TextView
            android:id="@+id/following_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@string/label_following"
            android:textColor="#222222"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/followers_label"
            />

        <TextView
            android:id="@+id/followers_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@string/label_followers"
            android:textColor="#222222"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            />

        <TextView
            android:id="@+id/blog_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@{viewModel.blog}"
            android:textColor="#222222"
            tools:text="20"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/barrier2"
            app:layout_constraintTop_toTopOf="@+id/blog_label"
            app:layout_constraintBottom_toBottomOf="@+id/blog_label"
            />

        <TextView
            android:id="@+id/company_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@{viewModel.company}"
            android:textColor="#222222"
            tools:text="20"
            app:layout_constraintStart_toEndOf="@+id/barrier2"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/company_label"
            app:layout_constraintBottom_toBottomOf="@+id/company_label"
            />

        <TextView
            android:id="@+id/repos_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@{viewModel.repos}"
            android:textColor="#222222"
            tools:text="20"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/barrier2"
            app:layout_constraintTop_toTopOf="@+id/repos_label"
            app:layout_constraintBottom_toBottomOf="@+id/repos_label"
            />

        <TextView
            android:id="@+id/gists_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@{viewModel.gists}"
            android:textColor="#222222"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/barrier2"
            app:layout_constraintTop_toTopOf="@+id/gists_label"
            app:layout_constraintBottom_toBottomOf="@+id/gists_label"
            tools:text="20"
            />

        <TextView
            android:id="@+id/following_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@{viewModel.following}"
            android:textColor="#222222"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/barrier2"
            app:layout_constraintTop_toTopOf="@+id/following_label"
            app:layout_constraintBottom_toBottomOf="@+id/following_label"
            tools:text="20"
            />

        <TextView
            android:id="@+id/followers_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:text="@{viewModel.followers}"
            android:textColor="#222222"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/barrier2"
            app:layout_constraintTop_toTopOf="@+id/followers_label"
            app:layout_constraintBottom_toBottomOf="@+id/followers_label"
            tools:text="20"
            />

        <android.support.constraint.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="gists_label,following_label,repos_label,followers_label"
            tools:layout_editor_absoluteX="384dp"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
